<h1 class="text-2xl font-bold mb-1">Server-Driven Tab Bar</h1>
<p class="text-gray-500 text-sm mb-6">Pick a persona to explore different tab configurations.</p>

<div class="space-y-3">
  <% SessionsController::PERSONAS.each do |id, persona| %>
    <%= button_to sign_in_path, params: { persona: id }, class: "w-full text-left p-4 bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-md hover:border-gray-300 transition" do %>
      <div class="font-semibold text-gray-900"><%= persona[:name] %></div>
      <div class="text-sm text-gray-500 mt-0.5 leading-snug"><%= persona[:description] %></div>
    <% end %>
  <% end %>
</div>
